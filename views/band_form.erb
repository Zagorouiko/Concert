<% if @venues.any?() %>

  <h3>Add a New Band</h3>
  <form action="/bands" method="post">
    <label for="band1">Enter in the name of the band:</label>
    <input id="band1" name="band1" class='form-control' placeholder="Band Name" required>

    <p><b>Select the venues this band has played in:</b></p>
      <% @venues.each() do |venue| %>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="venue_ids[]" value="<%= venue.id() %>"><%= venue.name() %>
          </label>
        </div>
      <% end %>

    <button type="submit">Add a Band</button>
  </form>

<% else %>

  <p>There are no bands or venues yet. Please add a band or venue first.</p>
  <a class='btn btn-default' href='/' role='button'>Back</a>

<% end %>
